---
import { getCollection, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import AdsterraAd from '../../components/AdsterraAd.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { id: post.id.replace(/\.(md|mdx)$/, '') },
		props: post,
	}));
}

type Props = Awaited<ReturnType<typeof getCollection<'blog'>>>[number];

const post = Astro.props;
const { Content } = await render(post);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`${post.data.title} | Future Voters Academy`}
			description={post.data.description}
		/>
	</head>
	<body>
		<Header />
		<main id="main-content" aria-label="Blog post">
			<div class="post-header">
				<div class="post-meta">
					<span class="post-category">{post.data.category}</span>
					<span class="post-date"><FormattedDate date={post.data.pubDate} /></span>
				</div>
				<h1>{post.data.title}</h1>
				<p class="post-description">{post.data.description}</p>
				<p class="post-byline">By {post.data.author}</p>
			</div>
			<div class="post-body">
				<Content />
			</div>
			<AdsterraAd />
			<div class="post-footer">
				<a href="/blog" class="back-link">&larr; All Articles</a>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 760px;
		margin: 0 auto;
		padding: 3rem 1.5rem 4rem;
	}
	.post-header {
		border-bottom: 2px solid rgb(var(--black));
		padding-bottom: 1.5rem;
		margin-bottom: 2rem;
	}
	.post-meta {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.75rem;
	}
	.post-category {
		font-size: 0.7rem;
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		background: rgb(var(--black));
		color: #ffffff;
		padding: 0.15rem 0.5rem;
	}
	.post-date {
		font-size: 0.8rem;
		color: rgb(var(--gray));
	}
	h1 {
		font-size: 1.75rem;
		font-weight: 700;
		color: rgb(var(--black));
		line-height: 1.3;
		margin: 0 0 0.75rem;
		letter-spacing: 0.02em;
	}
	.post-description {
		font-size: 1rem;
		line-height: 1.7;
		color: rgb(var(--gray));
		margin: 0 0 0.5rem;
	}
	.post-byline {
		font-size: 0.8rem;
		color: rgb(var(--gray));
		margin: 0;
	}
	.post-body {
		font-size: 0.95rem;
		line-height: 1.85;
		color: rgb(var(--gray-dark));
	}
	.post-body :global(h2) {
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		border-left: 4px solid rgb(var(--black));
		padding-left: 0.75rem;
		margin: 2rem 0 0.75rem;
	}
	.post-body :global(p) {
		margin: 0 0 0.9rem;
	}
	.post-body :global(a) {
		color: var(--accent);
		font-weight: 600;
	}
	.post-body :global(a:hover) {
		color: var(--accent-warm);
	}
	.post-body :global(ul) {
		padding-left: 1.5rem;
		margin: 0 0 0.9rem;
	}
	.post-body :global(li) {
		margin-bottom: 0.3rem;
	}
	.post-body :global(hr) {
		border: none;
		border-top: 1px solid rgb(var(--gray-light));
		margin: 2rem 0;
	}
	.post-body :global(em) {
		font-size: 0.875rem;
		color: rgb(var(--gray));
	}
	.post-body :global(strong) {
		font-weight: 700;
		color: rgb(var(--black));
	}
	.post-footer {
		border-top: 1px solid rgb(var(--gray-light));
		padding-top: 1.5rem;
		margin-top: 2.5rem;
	}
	.back-link {
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--accent);
		text-decoration: underline;
		text-underline-offset: 2px;
	}
	.back-link:hover {
		color: var(--accent-warm);
	}
</style>

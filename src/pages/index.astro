---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.agency-banner {
				background: rgb(var(--black));
				color: #ffffff;
				padding: 2.5rem 1rem;
				text-align: center;
			}
			.agency-banner h1 {
				color: #ffffff;
				font-size: 2rem;
				letter-spacing: 0.06em;
				text-transform: uppercase;
				margin: 0 0 0.5rem 0;
			}
			.agency-banner p {
				margin: 0;
				font-size: 0.95rem;
				letter-spacing: 0.04em;
				color: rgb(var(--gray-light));
				text-transform: uppercase;
			}
			.content-section {
				border-bottom: 1px solid rgb(var(--gray-light));
				padding-bottom: 2rem;
				margin-bottom: 2rem;
			}
			.content-section:last-of-type {
				border-bottom: none;
			}
			.content-section h2 {
				font-size: 1rem;
				text-transform: uppercase;
				letter-spacing: 0.08em;
				border-left: 4px solid rgb(var(--black));
				padding-left: 0.75rem;
				margin-bottom: 0.75rem;
			}
			.content-section p {
				font-size: 0.95rem;
				line-height: 1.8;
				margin: 0 0 0.75rem 0;
			}
			.donation-box {
				border: 1px solid rgb(var(--gray-light));
				border-left: 4px solid rgb(var(--black));
				padding: 1.5rem;
				background: #f9f9f9;
			}
			.donation-box p {
				margin: 0 0 0.5rem 0;
				font-size: 0.95rem;
				line-height: 1.8;
			}
			.donation-box p:last-child {
				margin: 0;
			}
			.donation-box a {
				color: var(--accent);
			}
		</style>
	</head>
	<body>
		<Header />
		<div class="agency-banner">
			<h1>Future Voters Academy</h1>
			<p>Nonpartisan Civic Education &mdash; futurevotersacademy.org</p>
		</div>
		<main>
			<div class="content-section">
				<h2>About FVA</h2>
				<p>
					Future Voters Academy (FVA) is an unincorporated association dedicated to providing
					nonpartisan political education to residents of low-income neighborhoods. We believe every
					community deserves access to the civic knowledge needed to participate fully and
					confidently in our democracy.
				</p>
				<p>
					FVA is currently seeking donations and community support as we work toward becoming a
					registered nonprofit corporation.
				</p>
			</div>

			<div class="content-section">
				<h2>Our Mission</h2>
				<p>
					Our mission is to raise funds and resources that go directly toward educational programs,
					workshops, and materials that empower future voters — regardless of political affiliation
					— to understand their rights, the electoral process, and how government works at every
					level.
				</p>
				<p>
					Low-income communities are consistently underserved in civic education. FVA exists to
					close that gap by delivering accessible, unbiased information where it is needed most.
				</p>
			</div>

			<div class="content-section">
				<h2>Support Our Work</h2>
				<div class="donation-box">
					<p>
						FVA is funded entirely by donations from individuals and organizations who share our
						commitment to an informed electorate. Every contribution — regardless of size — directly
						supports nonpartisan voter education programs in underserved communities.
					</p>
					<p>
						To make a donation or discuss partnership opportunities, contact us at{' '}
						<a href="mailto:fva.info.contact@gmail.com">fva.info.contact@gmail.com</a>.
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

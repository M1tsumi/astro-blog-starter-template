---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
<head>
	<BaseHead
		title="Page Not Found | Future Voters Academy"
		description="The page you are looking for could not be found. Return to the Future Voters Academy homepage."
	/>
</head>
<body>
	<Header />
	<main id="main-content" aria-label="Page not found">
		<div class="container">
			<p class="code">404</p>
			<h1>Page Not Found</h1>
			<p class="message">
				The page you are looking for does not exist or may have been moved.
			</p>
			<div class="links">
				<a href="/" class="btn-primary">Return to Homepage</a>
				<a href="/about" class="link">About FVA</a>
				<a href="/programs" class="link">Our Programs</a>
				<a href="/contact" class="link">Contact Us</a>
			</div>
		</div>
	</main>
	<Footer />
</body>
</html>

<style>
	main {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		padding: 4rem 1.5rem;
		background: #f5f5f5;
	}
	.container {
		max-width: 540px;
		text-align: center;
	}
	.code {
		font-family: "Inter", system-ui, sans-serif;
		font-size: 5rem;
		font-weight: 800;
		color: #c9921a;
		line-height: 1;
		margin: 0 0 0.5rem;
	}
	h1 {
		font-family: "Inter", system-ui, sans-serif;
		font-size: 1.75rem;
		font-weight: 700;
		color: #1a2e4a;
		text-transform: uppercase;
		letter-spacing: 0.04em;
		margin: 0 0 1rem;
	}
	.message {
		font-family: "Inter", system-ui, sans-serif;
		font-size: 1rem;
		color: #4b5563;
		line-height: 1.7;
		margin: 0 0 2.5rem;
	}
	.links {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.75rem;
	}
	.btn-primary {
		display: inline-block;
		background: #1a2e4a;
		color: #ffffff;
		text-decoration: none;
		padding: 0.8rem 2rem;
		font-family: "Inter", system-ui, sans-serif;
		font-size: 0.875rem;
		font-weight: 700;
		letter-spacing: 0.04em;
		text-transform: uppercase;
		transition: background 0.15s;
	}
	.btn-primary:hover {
		background: #132238;
	}
	.link {
		font-family: "Inter", system-ui, sans-serif;
		font-size: 0.9rem;
		color: #1a2e4a;
		font-weight: 600;
		text-decoration: underline;
		text-underline-offset: 2px;
	}
	.link:hover {
		color: #c9921a;
	}
</style>

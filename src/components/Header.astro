---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<a href="#main-content" class="skip-link">Skip to main content</a>

<div class="gov-banner">
	<span>An official website of Future Voters Academy &mdash; futurevotersacademy.org</span>
</div>

<header>
	<nav aria-label="Primary navigation">
		<div class="brand">
			<a href="/" aria-label="Future Voters Academy home">
				<img src="/fva-logo.svg" alt="" class="brand-logo" width="42" height="42" aria-hidden="true" />
				<div class="brand-text">
					<span class="brand-name">{SITE_TITLE}</span>
					<span class="brand-tagline">Nonpartisan Civic Education</span>
				</div>
			</a>
		</div>

		<input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true" />
		<label for="nav-toggle" class="nav-toggle-label" aria-label="Toggle navigation">
			<span></span><span></span><span></span>
		</label>

		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/programs">Programs</HeaderLink>
			<HeaderLink href="/resources">Resources</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>

<style>
	.gov-banner {
		background: var(--accent);
		color: rgba(255, 255, 255, 0.88);
		font-size: 0.72rem;
		letter-spacing: 0.04em;
		padding: 0.3rem 1rem;
		text-align: center;
	}
	header {
		margin: 0;
		background: #ffffff;
		border-bottom: 2px solid rgb(var(--black));
	}
	nav {
		display: flex;
		align-items: stretch;
		justify-content: space-between;
		max-width: calc(var(--max-width) + 2em);
		margin: 0 auto;
		padding: 0 1em;
		position: relative;
	}
	.brand {
		display: flex;
		align-items: center;
		padding: 0.6rem 0;
	}
	.brand a {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.6rem;
		text-decoration: none;
		line-height: 1.2;
	}
	.brand-logo {
		display: block;
		flex-shrink: 0;
		border-radius: 2px;
	}
	.brand-text {
		display: flex;
		flex-direction: column;
	}
	.brand-name {
		font-size: 1.1rem;
		font-weight: 700;
		letter-spacing: 0.02em;
		color: rgb(var(--black));
		text-transform: uppercase;
	}
	.brand-tagline {
		font-size: 0.68rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: rgb(var(--gray));
		margin-top: 0.1rem;
	}
	.nav-links {
		display: flex;
		align-items: stretch;
	}
	.nav-links a {
		display: flex;
		align-items: center;
		padding: 0 0.75rem;
		color: rgb(var(--black));
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-size: 0.78rem;
		letter-spacing: 0.07em;
		text-transform: uppercase;
		font-weight: 600;
		height: 100%;
		box-sizing: border-box;
		transition: border-color 0.15s ease;
	}
	.nav-links a:hover {
		border-bottom-color: rgb(var(--gray));
	}
	.nav-links a.active {
		border-bottom-color: rgb(var(--black));
	}
	.nav-links a:focus-visible {
		outline: 3px solid var(--accent-mid);
		outline-offset: -3px;
	}
	/* Mobile hamburger */
	.nav-toggle {
		display: none;
	}
	.nav-toggle-label {
		display: none;
	}
	@media (max-width: 720px) {
		.nav-toggle-label {
			display: flex;
			flex-direction: column;
			justify-content: center;
			gap: 5px;
			cursor: pointer;
			padding: 0.75rem 0;
		}
		.nav-toggle-label span {
			display: block;
			width: 22px;
			height: 2px;
			background: rgb(var(--black));
			transition: all 0.2s ease;
		}
		.nav-links {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: #ffffff;
			border-top: 1px solid rgb(var(--gray-light));
			border-bottom: 2px solid rgb(var(--black));
			flex-direction: column;
			z-index: 100;
		}
		.nav-links a {
			padding: 0.85rem 1.25rem;
			border-bottom: 1px solid rgb(var(--gray-light));
			font-size: 0.85rem;
		}
		.nav-links a:last-child {
			border-bottom: none;
		}
		.nav-toggle:checked ~ .nav-links {
			display: flex;
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 5px);
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(2) {
			opacity: 0;
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(3) {
			transform: rotate(-45deg) translate(5px, -5px);
		}
	}
</style>

---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, DONATE_URL } from '../consts';
---

<a href="#main-content" class="skip-link">Skip to main content</a>

<header>
<nav aria-label="Primary navigation">
<div class="brand">
<a href="/" aria-label="Future Voters Academy home">
<img src="/fva-logo.svg" alt="" class="brand-logo" width="36" height="36" aria-hidden="true" />
<div class="brand-text">
<span class="brand-name">{SITE_TITLE}</span>
<span class="brand-tagline">Nonpartisan Civic Education</span>
</div>
</a>
</div>

<input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true" />
<label for="nav-toggle" class="nav-toggle-label" aria-label="Toggle navigation">
<span></span><span></span><span></span>
</label>

<div class="nav-links">
<HeaderLink href="/">Home</HeaderLink>
<HeaderLink href="/about">About</HeaderLink>
<HeaderLink href="/programs">Programs</HeaderLink>
<HeaderLink href="/news">News</HeaderLink>
<HeaderLink href="/blog">Blog</HeaderLink>
<HeaderLink href="/resources">Resources</HeaderLink>
<HeaderLink href="/contact">Contact</HeaderLink>
<a href="/donate" class="nav-donate">Donate</a>
</div>
</nav>
</header>

<style>
header {
margin: 0;
background: #ffffff;
border-bottom: 1px solid #dde1e7;
position: sticky;
top: 0;
z-index: 200;
}
nav {
display: flex;
align-items: center;
justify-content: space-between;
max-width: 1160px;
margin: 0 auto;
padding: 0 1.5rem;
height: 68px;
position: relative;
}
.brand {
display: flex;
align-items: center;
}
.brand a {
display: flex;
flex-direction: row;
align-items: center;
gap: 0.6rem;
text-decoration: none;
line-height: 1.25;
}
.brand-logo {
display: block;
flex-shrink: 0;
}
.brand-text {
display: flex;
flex-direction: column;
}
.brand-name {
font-size: 0.95rem;
font-weight: 700;
letter-spacing: 0.02em;
color: #1a2e4a;
text-transform: uppercase;
}
.brand-tagline {
font-size: 0.62rem;
letter-spacing: 0.06em;
text-transform: uppercase;
color: #6b7280;
margin-top: 0.1rem;
}
.nav-links {
display: flex;
align-items: center;
gap: 0;
}
.nav-links :global(a) {
display: flex;
align-items: center;
padding: 0 0.9rem;
color: #1a2e4a;
text-decoration: none;
font-size: 0.8rem;
font-weight: 600;
letter-spacing: 0.04em;
text-transform: uppercase;
height: 68px;
box-sizing: border-box;
border-bottom: 3px solid transparent;
transition: border-bottom-color 0.15s, color 0.15s;
}
.nav-links :global(a:hover) {
color: #c9921a;
border-bottom-color: #c9921a;
}
.nav-links :global(a.active) {
color: #1a2e4a;
border-bottom-color: #1a2e4a;
}
.nav-links :global(a:focus-visible) {
outline: 2px solid #1a2e4a;
outline-offset: -2px;
}
.nav-donate {
display: inline-flex !important;
align-items: center !important;
margin-left: 1rem;
background: #c9921a !important;
color: #ffffff !important;
border: none !important;
border-bottom: none !important;
padding: 0.5rem 1.25rem !important;
font-size: 0.8rem !important;
font-weight: 700 !important;
letter-spacing: 0.05em !important;
text-transform: uppercase !important;
text-decoration: none !important;
height: auto !important;
align-self: center;
transition: background 0.15s !important;
}
.nav-donate:hover {
background: #a87a14 !important;
color: #ffffff !important;
border-bottom-color: transparent !important;
}
.nav-toggle { display: none; }
.nav-toggle-label { display: none; }

@media (max-width: 820px) {
.nav-toggle-label {
display: flex;
flex-direction: column;
justify-content: center;
gap: 5px;
cursor: pointer;
padding: 0.5rem 0;
z-index: 10;
}
.nav-toggle-label span {
display: block;
width: 22px;
height: 2px;
background: #1a2e4a;
transition: all 0.2s ease;
}
.nav-links {
display: none;
position: absolute;
top: 68px;
left: 0;
right: 0;
background: #ffffff;
border-top: 1px solid #dde1e7;
border-bottom: 3px solid #1a2e4a;
flex-direction: column;
align-items: stretch;
z-index: 100;
}
.nav-links :global(a) {
padding: 0.9rem 1.5rem;
border-bottom: 1px solid #dde1e7 !important;
border-bottom-width: 1px !important;
height: auto;
font-size: 0.85rem;
}
.nav-links :global(a:last-child) {
border-bottom: none !important;
}
.nav-donate {
margin: 0.75rem 1.5rem !important;
align-self: flex-start !important;
}
.nav-toggle:checked ~ .nav-links { display: flex; }
.nav-toggle:checked + .nav-toggle-label span:nth-child(1) {
transform: rotate(45deg) translate(5px, 5px);
}
.nav-toggle:checked + .nav-toggle-label span:nth-child(2) { opacity: 0; }
.nav-toggle:checked + .nav-toggle-label span:nth-child(3) {
transform: rotate(-45deg) translate(5px, -5px);
}
}
</style>

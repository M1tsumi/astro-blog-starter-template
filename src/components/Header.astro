---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<a href="#main-content" class="skip-link">Skip to main content</a>

<header>
	<nav aria-label="Primary navigation">
		<div class="brand">
			<a href="/" aria-label="Future Voters Academy home">
				<img src="/fva-logo.svg" alt="" class="brand-logo" width="38" height="38" aria-hidden="true" />
				<div class="brand-text">
					<span class="brand-name">{SITE_TITLE}</span>
					<span class="brand-tagline">Nonpartisan Civic Education</span>
				</div>
			</a>
		</div>

		<input type="checkbox" id="nav-toggle" class="nav-toggle" aria-hidden="true" />
		<label for="nav-toggle" class="nav-toggle-label" aria-label="Toggle navigation">
			<span></span><span></span><span></span>
		</label>

		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/programs">Programs</HeaderLink>
			<HeaderLink href="/resources">Resources</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
			<a href="https://gofund.me/99ba920ef" target="_blank" rel="noopener noreferrer" class="nav-donate">Donate</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		background: #0d1821;
		border-bottom: 3px solid #c9881a;
		position: sticky;
		top: 0;
		z-index: 200;
	}
	nav {
		display: flex;
		align-items: stretch;
		justify-content: space-between;
		max-width: calc(var(--wide-width) + 3rem);
		margin: 0 auto;
		padding: 0 1.5rem;
		position: relative;
	}
	.brand {
		display: flex;
		align-items: center;
		padding: 0.65rem 0;
	}
	.brand a {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.65rem;
		text-decoration: none;
		line-height: 1.2;
	}
	.brand-logo {
		display: block;
		flex-shrink: 0;
		border-radius: 2px;
		opacity: 0.92;
	}
	.brand-text {
		display: flex;
		flex-direction: column;
	}
	.brand-name {
		font-size: 1rem;
		font-weight: 800;
		letter-spacing: 0.04em;
		color: #ffffff;
		text-transform: uppercase;
	}
	.brand-tagline {
		font-size: 0.64rem;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: rgba(215, 218, 222, 0.6);
		margin-top: 0.1rem;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0;
	}
	/* Override HeaderLink styles for dark nav */
	.nav-links :global(a) {
		display: flex;
		align-items: center;
		padding: 0 0.85rem;
		color: rgba(215, 218, 222, 0.88);
		border-bottom: 3px solid transparent;
		text-decoration: none;
		font-size: 0.76rem;
		letter-spacing: 0.07em;
		text-transform: uppercase;
		font-weight: 600;
		height: 100%;
		box-sizing: border-box;
		transition: color 0.15s ease, border-color 0.15s ease;
	}
	.nav-links :global(a:hover) {
		color: #ffffff;
		border-bottom-color: #c9881a;
	}
	.nav-links :global(a.active) {
		color: #ffffff;
		border-bottom-color: #c9881a;
	}
	.nav-links :global(a:focus-visible) {
		outline: 2px solid #c9881a;
		outline-offset: -2px;
	}
	/* Donate button */
	.nav-donate {
		display: inline-flex !important;
		align-items: center !important;
		margin-left: 0.75rem;
		background: #c9881a !important;
		color: #ffffff !important;
		border: 2px solid #c9881a !important;
		border-bottom: 2px solid #c9881a !important;
		padding: 0.45rem 1.25rem !important;
		border-radius: 4px !important;
		font-size: 0.76rem !important;
		font-weight: 700 !important;
		letter-spacing: 0.08em !important;
		text-transform: uppercase !important;
		text-decoration: none !important;
		transition: background 0.15s, border-color 0.15s, transform 0.1s !important;
		height: auto !important;
		align-self: center;
		box-shadow: 0 2px 8px rgba(201, 136, 26, 0.3);
		white-space: nowrap;
	}
	.nav-donate:hover {
		background: #b07010 !important;
		border-color: #b07010 !important;
		color: #ffffff !important;
		transform: translateY(-1px);
	}
	/* Mobile hamburger */
	.nav-toggle {
		display: none;
	}
	.nav-toggle-label {
		display: none;
	}
	@media (max-width: 820px) {
		.nav-toggle-label {
			display: flex;
			flex-direction: column;
			justify-content: center;
			gap: 5px;
			cursor: pointer;
			padding: 0.75rem 0;
		}
		.nav-toggle-label span {
			display: block;
			width: 24px;
			height: 2px;
			background: rgba(215, 218, 222, 0.88);
			transition: all 0.2s ease;
			border-radius: 1px;
		}
		.nav-links {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: #0d1821;
			border-top: 1px solid rgba(255, 255, 255, 0.08);
			border-bottom: 3px solid #c9881a;
			flex-direction: column;
			align-items: stretch;
			z-index: 100;
			gap: 0;
		}
		.nav-links :global(a) {
			padding: 0.9rem 1.5rem;
			border-bottom: 1px solid rgba(255, 255, 255, 0.07) !important;
			border-left: none;
			border-right: none;
			border-top: none;
			font-size: 0.85rem;
			height: auto;
		}
		.nav-links :global(a:last-child) {
			border-bottom: none !important;
		}
		.nav-donate {
			margin: 0.75rem 1.5rem !important;
			align-self: flex-start !important;
		}
		.nav-toggle:checked ~ .nav-links {
			display: flex;
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 5px);
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(2) {
			opacity: 0;
		}
		.nav-toggle:checked + .nav-toggle-label span:nth-child(3) {
			transform: rotate(-45deg) translate(5px, -5px);
		}
	}
</style>



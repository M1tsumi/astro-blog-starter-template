---
import '../styles/global.css';
import { SITE_KEYWORDS, SITE_AUTHOR, SITE_URL, OG_IMAGE } from '../consts';

interface Props {
	title: string;
	description: string;
	keywords?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, keywords = SITE_KEYWORDS } = Astro.props;
const ogImageURL = new URL(OG_IMAGE, SITE_URL).href;

const orgSchema = JSON.stringify({
	"@context": "https://schema.org",
	"@type": "NGO",
	"name": "Future Voters Academy",
	"url": SITE_URL,
	"email": "fva.info.contact@gmail.com",
	"description": "Future Voters Academy raises funds for free, nonpartisan civic and political education in low-income neighborhoods.",
	"founder": { "@type": "Person", "name": "Thomas Cobb" },
	"areaServed": "United States",
	"knowsAbout": ["Civic Education", "Voter Education", "Nonpartisan Political Education"]
});
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="mask-icon" href="/favicon.svg" color="#1b2a3b" />
<meta name="theme-color" content="#1a2e4a" />
<meta name="generator" content={Astro.generator} />

<!-- Geo Meta -->
<meta name="geo.region" content="US-GA" />
<meta name="geo.placename" content="Pierce County, Georgia" />

<!-- Inter font (Google Fonts) -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

<!-- Fallback font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={SITE_AUTHOR} />
<meta name="robots" content="index, follow" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Future Voters Academy" />
<meta property="og:locale" content="en_US" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageURL} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={orgSchema} />

<!-- Google AdSense -->
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2987218825151349" crossorigin="anonymous"></script>

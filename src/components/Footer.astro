<style>
footer {
background: #0d1821;
color: rgba(215, 218, 222, 0.82);
border-top: 4px solid #c9881a;
font-size: 0.88rem;
font-family: "Inter", "Atkinson", system-ui, sans-serif;
}
.footer-inner {
display: grid;
grid-template-columns: 2.2fr 1fr 1.2fr;
gap: 3rem;
max-width: calc(var(--wide-width) + 3rem);
margin: 0 auto;
padding: 3.5rem 1.5rem 3rem;
}
.footer-org {
font-size: 1rem;
font-weight: 800;
text-transform: uppercase;
letter-spacing: 0.06em;
color: #ffffff;
margin: 0 0 0.6rem 0;
}
.footer-mission {
color: rgba(215, 218, 222, 0.7);
line-height: 1.65;
margin: 0 0 0.75rem 0;
font-size: 0.875rem;
max-width: 280px;
}
.footer-status {
color: rgba(215, 218, 222, 0.42);
font-size: 0.75rem;
margin: 0 0 1.25rem;
letter-spacing: 0.02em;
}
.footer-donate-btn {
display: inline-block;
background: #c9881a;
color: #ffffff !important;
text-decoration: none !important;
padding: 0.55rem 1.25rem;
font-size: 0.78rem;
font-weight: 700;
text-transform: uppercase;
letter-spacing: 0.08em;
border-radius: 4px;
border: 2px solid #c9881a;
transition: background 0.15s, border-color 0.15s;
}
.footer-donate-btn:hover {
background: #b07010;
border-color: #b07010;
}
.footer-heading {
font-size: 0.68rem;
text-transform: uppercase;
letter-spacing: 0.12em;
color: rgba(215, 218, 222, 0.45);
margin: 0 0 0.75rem 0;
padding-bottom: 0.4rem;
border-bottom: 1px solid rgba(255, 255, 255, 0.08);
font-weight: 600;
}
.footer-col ul {
list-style: none;
padding: 0;
margin: 0;
}
.footer-col ul li {
margin-bottom: 0.5rem;
font-size: 0.875rem;
line-height: 1.5;
}
.footer-col ul li:last-child {
margin-bottom: 0;
}
.footer-col a {
color: rgba(215, 218, 222, 0.8);
text-decoration: none;
transition: color 0.15s;
}
.footer-col a:hover {
color: #ffffff;
}
.social-link {
display: inline-flex;
align-items: center;
}
.footer-bottom {
background: #070e16;
border-top: 1px solid rgba(255, 255, 255, 0.06);
text-align: center;
padding: 1rem 1.5rem;
font-size: 0.76rem;
color: rgba(215, 218, 222, 0.38);
letter-spacing: 0.02em;
display: flex;
justify-content: center;
align-items: center;
gap: 0.6rem;
flex-wrap: wrap;
}
.footer-bottom-sep {
opacity: 0.4;
}
@media (max-width: 820px) {
.footer-inner {
grid-template-columns: 1fr 1fr;
gap: 2rem;
padding: 2.5rem 1.5rem 2rem;
}
.footer-brand {
grid-column: span 2;
}
.footer-mission {
max-width: 100%;
}
}
@media (max-width: 520px) {
.footer-inner {
grid-template-columns: 1fr;
gap: 1.75rem;
}
.footer-brand {
grid-column: span 1;
}
}
</style>
